{
  "name": "purge-antivirus",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit -p tsconfig.app.json",
    "electron": "electron dist-electron/main.js",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron dist-electron/main.js\"",
    "build-electron": "node scripts/build-electron.js",
    "dist": "npm run build && npm run build-electron && electron-builder",
    "release": "node scripts/create-release.js",
    "release-patch": "node scripts/create-release.js --patch",
    "release-minor": "node scripts/create-release.js --minor",
    "release-major": "node scripts/create-release.js --major"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.65.0",
    "events": "^3.3.0",
    "lucide-react": "^0.344.0",
    "ollama": "^0.6.0",
    "openai": "^6.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/node": "^20.10.0",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2",
    "wait-on": "^7.2.0"
  },
  "main": "dist-electron/main.js",
  "homepage": "./",
  "build": {
    "appId": "com.devdussey.purge",
    "productName": "Purge by DevDussey",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "scripts/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/PurgedIcon.png",
      "requestedExecutionLevel": "requireAdministrator",
      "publisherName": "DevDussey"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/PurgedIcon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/PurgedIcon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
